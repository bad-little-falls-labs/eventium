{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "dotnet-format",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["format", "--verify-no-changes"]
      },
      {
         "name": "dotnet-build",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["build", "--no-restore", "-c", "Release"]
      },
      {
         "name": "dotnet-test",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["test", "--no-build", "-c", "Release", "--verbosity", "minimal"]
      }
   ]
}
