# Top-most EditorConfig file
root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# C# files
[*.cs]
indent_style = space
indent_size = 4

# XML files
[*.{props,xml,csproj,sln}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false